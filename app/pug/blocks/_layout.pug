    script(src="js/jquery-ui.min.js")
    script(src="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.7/dist/jquery.fancybox.min.js")
    script(src="js/paralax.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.js")
    script(src="https://bkosborne.com/sites/all/themes/bootstrap_brian/js/jquery.waterwheelCarousel.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/particlesjs/2.2.2/particles.min.js")
    script(src="js/revalator.js")
    script(src="js/hamburger.js")
    script(src="js/common.js")